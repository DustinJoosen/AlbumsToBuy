@model AlbumsToBuy.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<h3>Are you sure you want to delete this album and it's tracks?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            <p>@Model.ReleaseDate.ToString("dd/MM/yyyy")</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.ImageUrl" style="width:120px; height:120px;" />
        </dd>
    </dl>

    <hr />
    <h4>Tracks</h4>

    <hr />

    <table class="table" style="width:60%;">
        <tr>
            <th>Track name</th>
            <th>Duration</th>
        </tr>
        @foreach (var track in Model.Tracks)
        {
            <tr class="album_details_track">
                <td>@track.Name</td>
                <td class="album_details_track_duration">@track.FormattedDuration</td>
            </tr>
        }
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
