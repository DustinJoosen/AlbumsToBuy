@model AlbumsToBuy.Models.AlbumOrder

@{
    ViewData["Title"] = "Add Album To Order";
}

<h1>Album</h1>

<h4>AlbumOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Album">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
