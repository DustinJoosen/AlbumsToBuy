@model AlbumsToBuy.ViewModels.OrderAlbums

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Payment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Payment.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Address.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.SpecialNotes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.SpecialNotes)
        </dd>
    </dl>
</div>

<hr/>

@foreach(var albumOrder in Model.AlbumOrders)
{
    <p>@albumOrder.Album.Name by @albumOrder.Album.Creator</p>
}

<hr/>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
